<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BrowseCheatView">
    <TextView
        android:id="@+id/bcTitle"
        android:textSize="@dimen/cheatTitle"
        android:gravity="center"
        android:textColor="@color/BLACK"
        android:layout_margin="@dimen/standardMarginAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/bcDescription"
        android:textColor="@color/BLACK"
        android:background="@drawable/frame"
        android:textSize="@dimen/listTitleAndCheatDescription"
        android:padding="@dimen/standardMarginAndPadding"
        android:layout_margin="@dimen/standardMarginAndPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bcTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>